					Employee e=new Employee();  
					e.setId(rs.getInt(1));  
					e.setName(rs.getString(2));  
					e.setAge(rs.getInt(3));
					e.setPosition(rs.getString(4));
					list.add(e);  
				}  
				return list;  
			}  
		});  
	}  
}
